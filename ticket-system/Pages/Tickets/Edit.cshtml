@page
@model ticket_system.Pages.Tickets.EditModel
@{
}


<br>
<h2>Edit Ticket</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.ticketInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-labl">Problem</label>
        <div class="col-sm-6">
            <input type="text" class="from-control" name="Problem" value="@Model.ticketInfo.problem">
        </div>
    </div>

    @if (Model.succsesMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.succsesMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>

    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Tickets/TicketBelletin" role="button">Cancel</a>
        </div>
    </div>
</form>

